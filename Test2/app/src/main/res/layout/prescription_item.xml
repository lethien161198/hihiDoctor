<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_edit_text"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:id="@+id/drug_rank_text_view"
            style="@style/TextViewItem"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textStyle="bold"
            android:text="Thuoc 1"/>
        <ImageView
            android:id="@+id/delete_image_view"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_baseline_delete_outline_24"/>
        <LinearLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/delete_image_view"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="3"
                style="@style/TextViewItem"
                android:layout_width="match_parent"
                android:text="Ten Thuoc"/>
            <TextView
                android:layout_weight="6"
                style="@style/TextViewItem"
                android:layout_width="match_parent"
                android:text="SL"/>
            <TextView
                android:layout_weight="5"
                style="@style/TextViewItem"
                android:layout_width="match_parent"
                android:text="Loai"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/title_layout"
            app:layout_constraintLeft_toLeftOf="parent">
            <EditText
                android:id="@+id/name_edit_text"
                android:layout_weight="3"
                style="@style/EditTextItem"
                android:layout_width="match_parent"/>
            <EditText
                android:id="@+id/number_edit_text"
                android:layout_weight="6"
                style="@style/EditTextItem"
                android:layout_width="match_parent"/>
            <EditText
                android:id="@+id/type_edit_text"
                android:layout_weight="5"
                style="@style/EditTextItem"
                android:layout_width="match_parent"/>
        </LinearLayout>
        <TextView
            android:id="@+id/title_use_text_view"
            style="@style/TextViewItem"
            app:layout_constraintTop_toBottomOf="@id/content_layout"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Cach dung"/>
        <EditText
            android:id="@+id/use_edit_text"
            style="@style/EditTextItem"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@id/content_layout"
            app:layout_constraintLeft_toRightOf="@+id/title_use_text_view"
            app:layout_constraintRight_toRightOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>