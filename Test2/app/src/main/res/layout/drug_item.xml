<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data/>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_drug"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_premium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_text_view"
                style="@style/TextViewItem"
                android:text="Ten Thuoc: "/>

            <TextView
                style="@style/TextViewItem"
                android:text="Dang Bao Che: "/>

            <TextView
                android:id="@+id/type_text_view"
                style="@style/TextViewItem"
                android:layout_marginStart="10dp"
                android:text="bot, nguoc, vien nen"
                android:textSize="14sp"/>

            <TextView
                style="@style/TextViewItem"
                android:text="Mo Ta: "/>
            <TextView
                android:id="@+id/description_text_view"
                style="@style/TextViewItem"
                android:layout_marginStart="10dp"
                android:text="noi dung mo ta"
                android:textSize="14sp"/>

            <TextView
                style="@style/TextViewItem"
                android:text="Cach su dung:"/>

            <TextView
                android:id="@+id/use_text_view"
                style="@style/TextViewItem"
                android:layout_marginStart="10dp"
                android:text="ngay dung 10 vien de thoa man"
                android:textSize="14sp"/>

        </LinearLayout>
    </LinearLayout>
</layout>