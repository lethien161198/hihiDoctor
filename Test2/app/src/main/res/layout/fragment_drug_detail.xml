<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_smoke"
        android:orientation="vertical"
        tools:context=".modules.view.drugs.DrugDetailFragment">

        <include
            android:id="@+id/header"
            layout="@layout/header_title" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/paracetamol"/>

                <TextView
                    android:id="@+id/name_text_view"
                    style="@style/TextViewItem"
                    android:text="Ten Thuoc: "
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_gravity="center"/>

                <TextView
                    style="@style/TextViewItem"
                    android:text="Dang Bao Che: "
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/type_text_view"
                    style="@style/TextViewItem"
                    android:layout_marginStart="10dp"
                    android:text="bot, nguoc, vien nen"
                    android:textSize="14sp"/>

                <TextView
                    style="@style/TextViewItem"
                    android:text="Mo Ta: "
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/description_text_view"
                    style="@style/TextViewItem"
                    android:layout_marginStart="10dp"
                    android:text="noi dung mo ta"
                    android:textSize="14sp"/>

                <TextView
                    style="@style/TextViewItem"
                    android:text="Cach su dung:"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/use_text_view"
                    style="@style/TextViewItem"
                    android:layout_marginStart="10dp"
                    android:text="ngay dung 10 vien de thoa man"
                    android:textSize="14sp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>